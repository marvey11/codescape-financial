{
  "name": "@codescape-financial/portfolio-api",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@codescape-financial/portfolio-data-access": "*",
    "@codescape-financial/portfolio-data-models": "*",
    "@nestjs/config": "^4.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "pg": "^8.16.3",
    "typeorm": "^0.3.25"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@codescape-financial/portfolio-api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@codescape-financial/portfolio-api:build:development"
          },
          "production": {
            "buildTarget": "@codescape-financial/portfolio-api:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  }
}
